{
  "compilerOptions": {
    "incremental": true,
    "target": "es2018",
    "module": "es2015",
    "outDir": "./build",
    "rootDir": "./src",
    "composite": true,
    "removeComments": true,
    "downlevelIteration": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
  },
}
